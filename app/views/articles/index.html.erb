<%=render 'articles/header'%>
<% @articles.each do |article|%>
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      <h5 class="card-title"><%= link_to article.title, article %></h5>
    </div>
    <div class="card-body">
      <p class="card-text"><%=article.body%></p>
    </div>
  </div>
<%end%>
